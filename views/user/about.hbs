<style>
  @import url('https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap');
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}


.waviy {
  position: relative;
  -webkit-box-reflect: below -20px linear-gradient(transparent, rgba(0,0,0,.2));
    font-size: 43px;
    margin-bottom: 52px;
    text-align: left;
}
.header{
    animation: waviy 1s forwards;
    animation-delay: calc(.1s * var(--i));

}
.waviy span {
  font-family: 'Alfa Slab One', cursive;
  position: relative;
  display: inline-block;
  color: rgb(0, 0, 0);
  text-transform: uppercase;

  
}
@keyframes waviy {
  0%,40%,100% {
    transform: translateY(0)
  }
  20% {
    transform: translateY(-20px)
  }
}
.Paregraph{
text-align: justify;

transform: translateX(20px);

}
.animation{
animation: textfly 0.5s forwards;

}
@keyframes textfly {
  0% {
   opacity: 0;
  }
  100% {
    opacity: 1;
  transform: translateX(0);
  }
}

@media (max-width:378px) {

  .waviy {

    font-size: 35px;
  
}
}
@media (max-width:500px) {

  .waviy {

    text-align: center;
  
}
}
</style>
<script defer>
  const items=document.querySelector(".Paregraph")
  const heas=document.querySelectorAll(".waviy span")
  const opserve=new IntersectionObserver((enteries)=>{
    
     const entry=enteries[0];

     if(entry.isIntersecting){
      items.classList.toggle('animation')
      heas.forEach((hai)=>{
       hai.classList.toggle("header")
      })
     }
     
  })
   opserve.observe(items)

</script>